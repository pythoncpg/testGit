<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="bottom_dialog_style" parent="android:style/Theme.Dialog">
        <!-- 背景透明  -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 浮动  -->
        <item name="android:windowIsFloating">true</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
        <!--  引用动画效果  -->
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation" tools:ignore="DuplicateDefinition">
            @anim/action_dialog_in
        </item>
        <item name="android:windowEnterAnimation" tools:ignore="DuplicateDefinition">
            @anim/action_dialog_out
        </item>
    </style>

