        android:layout_height="@dimen/view_dimen_450"
        android:background="@drawable/a"
        android:scaleType="center" />

    <RelativeLayout
        android:id="@+id/rl_show_div1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/main_padding_50"
        android:layout_marginTop="@dimen/view_dimen_250"
        android:layout_marginRight="@dimen/main_padding_50"
        android:background="@drawable/bg_round_square_white"
        android:clipToOutline="true">

        <TextView
            android:id="@+id/tv_name_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/view_dimen_30"
            android:layout_marginTop="@dimen/view_dimen_30"
            android:layout_marginRight="@dimen/view_dimen_30"
            android:gravity="left"
            android:text="峡谷七连败"
            android:textColor="@color/headline"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_station_type_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_detail"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/view_dimen_30"
            android:layout_marginTop="@dimen/view_dimen_20"
            android:gravity="top"
            android:text="公共充电站"
            android:textColor="#99000000"
            android:textSize="14sp" />

        <View
            android:id="@+id/vector_7"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_station_type_detail"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/main_padding_30"
            android:layout_marginTop="@dimen/view_dimen_40"
            android:layout_marginRight="@dimen/main_padding_30"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_business_status_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vector_7"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/view_dimen_30"
            android:layout_marginTop="@dimen/view_dimen_30"
            android:gravity="top"
            android:lineSpacingExtra="1sp"
            android:text="正常营业"
            android:textColor="#4CD78F"
            android:textSize="14sp"
            android:translationY="-0.72sp" />

        <TextView
            android:id="@+id/tv_business_hours_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vector_7"
            android:layout_marginLeft="@dimen/view_dimen_70"
            android:layout_marginTop="@dimen/view_dimen_30"
            android:layout_toRightOf="@id/tv_business_status_detail"
            android:gravity="top"
            android:lineSpacingExtra="1sp"
            android:text="营业时间：24小时营业"
            android:textColor="#CC000000"
            android:textSize="14sp"
            android:translationY="-0.72sp" />

        <View
            android:id="@+id/vector_5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_business_status_detail"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/main_padding_30"
            android:layout_marginTop="@dimen/view_dimen_40"
            android:layout_marginRight="@dimen/main_padding_30"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_address_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vector_5"
            android:layout_marginLeft="@dimen/view_dimen_30"
            android:layout_marginTop="@dimen/view_dimen_30"
            android:gravity="center_vertical"
            android:text="海淀区炫舞街007号"
            android:textColor="#CC000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_distance_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_address_detail"
            android:layout_marginLeft="@dimen/view_dimen_30"
            android:layout_marginTop="@dimen/view_dimen_20"
            android:layout_marginBottom="@dimen/view_dimen_35"
            android:gravity="top"
            android:lineSpacingExtra="1sp"
            android:text="距当前位置329米"
            android:textColor="#66000000"
            android:textSize="14sp"
            android:translationY="-0.72sp" />

        <TextView
            android:id="@+id/tv_driver_time_detail"
            android:layout_width="106dp"
            android:layout_height="20dp"
            android:layout_below="@id/tv_address_detail"
            android:layout_marginLeft="@dimen/view_dimen_50"
            android:layout_marginTop="@dimen/view_dimen_20"
            android:layout_toRightOf="@+id/tv_distance_detail"
            android:gravity="top"
            android:lineSpacingExtra="1sp"
            android:text="驾车需7分钟内"
            android:textColor="#66000000"
            android:textSize="14sp"
            android:translationY="-0.72sp" />
    </RelativeLayout>


